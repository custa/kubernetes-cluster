apiVersion: v1
kind: Config
users:
  - name: node
    user:
      client-certificate: /etc/kubernetes/ssl/node.crt
      client-key: /etc/kubernetes/ssl/node.key
clusters:
  - name: local
    cluster:
      server: https://172.17.0.100:6443
      certificate-authority: /etc/kubernetes/ssl/ca.crt
contexts:
  - context:
      cluster: local
      user: node
    name: my-context
current-context: my-context
